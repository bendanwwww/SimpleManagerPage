{
  "type": "page",
  "title": "新增工单",
  "remark": null,
  "toolbar": [
    {
      "type": "button",
      "actionType": "link",
      "link": "/order/list",
      "label": "返回列表"
    }
  ],
  "body": [
    {
      "title": "",
      "type": "form",
      "redirect": "/order/list",
      "name": "sample-edit-form",
      "api": "post:dailySales/insertOrder",
      "controls": [
        {
          "label": "员工名称",
          "type": "select",
          "name": "workerId",
          "searchable": true,
          "source": "worker/queryWorkerOptions",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "datetime",
          "name": "recordDate",
          "format": "YYYY-MM-DD HH:mm:ss",
          "label": "交易时间",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "divider"
        },
        {
          "type": "number",
          "name": "saleAmount",
          "label": "数量(吨)",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "number",
          "name": "profile",
          "label": "利润(元)",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "text",
          "name": "clientName",
          "label": "客户名称",
          "required": true
        },
        {
          "name": "isNewClient",
          "type": "radios",
          "label": "是否是新客户",
          "columnsCount": 2,
          "options": [
            {
              "label": "是",
              "value": "1"
            },
            {
              "label": "否",
              "value": "0"
            }
          ],
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "textarea",
          "name": "remark",
          "label": "备注"
        }
      ]
    }
  ]
}
