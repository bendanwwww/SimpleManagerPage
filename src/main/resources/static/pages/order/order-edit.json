{
  "type": "page",
  "title": "修改 ${params.id}",
  "remark": null,
  "toolbar": [
    {
      "type": "button",
      "actionType": "link",
      "link": "/order/list",
      "label": "返回列表"
    }
  ],
  "body": [
    {
      "type": "form",
      "initApi": "dailySales/queryOrderById?id=${params.id}",
      "api": "post:dailySales/updateOrder",
      "redirect": "/order/list",
      "controls": [
        {
          "type": "hidden",
          "name": "id",
          "label": "ID"
        },
        {
          "label": "员工名称",
          "type": "select",
          "name": "workerId",
          "searchable": true,
          "source": "worker/queryWorkerOptions"
        },
        {
          "type": "divider"
        },
        {
          "type": "datetime",
          "name": "recordDate",
          "format": "YYYY-MM-DD HH:mm:ss",
          "label": "交易时间"
        },
        {
          "type": "divider"
        },
        {
          "type": "number",
          "name": "unitPrice",
          "label": "单价",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "number",
          "name": "saleAmount",
          "label": "数量(吨)",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "number",
          "name": "profile",
          "label": "利润",
          "disabled": true,
          "precision": 2
        },
        {
          "type": "formula",
          "name": "profile",
          "value": 0,
          "formula": "unitPrice * saleAmount",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "label": "钢材类型",
          "type": "select",
          "name": "steelType",
          "options": [
            {
              "label": "螺旋钢管",
              "value": "1"
            },
            {
              "label": "无缝钢管",
              "value": "2"
            },
            {
              "label": "镀锌管",
              "value": "3"
            },
            {
              "label": "方管",
              "value": "4"
            },
            {
              "label": "焊管",
              "value": "5"
            },
            {
              "label": "型材",
              "value": "6"
            },
            {
              "label": "其他",
              "value": "7"
            }
          ]
        },
        {
          "type": "divider"
        },
        {
          "type": "text",
          "name": "clientName",
          "label": "客户名称",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "name": "isNewClient",
          "type": "radios",
          "label": "是否是新客户",
          "columnsCount": 2,
          "options": [
            {
              "label": "是",
              "value": "1"
            },
            {
              "label": "否",
              "value": "0"
            }
          ]
        },
        {
          "type": "divider"
        },
        {
          "type": "textarea",
          "name": "remark",
          "label": "备注"
        }
      ]
    }
  ]
}
